<keymap version="1" name="chukanov-keymap" parent="$default">
  <action id="ActivateRunToolWindow">
    <keyboard-shortcut first-keystroke="alt 7" />
  </action>
  <action id="ActivateStructureToolWindow">
    <keyboard-shortcut first-keystroke="alt 4" />
  </action>
  <action id="ExpandAllToLevel1">
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="1" />
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="numpad1" />
    <keyboard-shortcut first-keystroke="shift alt 1" />
  </action>
  <action id="ExpandAllToLevel2">
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="2" />
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="numpad2" />
    <keyboard-shortcut first-keystroke="shift alt 2" />
  </action>
  <action id="ExpandAllToLevel3">
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="3" />
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="numpad3" />
    <keyboard-shortcut first-keystroke="shift alt 3" />
  </action>
  <action id="ExpandAllToLevel4">
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="4" />
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="numpad4" />
    <keyboard-shortcut first-keystroke="shift alt 4" />
  </action>
  <action id="ExpandAllToLevel5">
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="5" />
    <keyboard-shortcut first-keystroke="shift ctrl multiply" second-keystroke="numpad5" />
    <keyboard-shortcut first-keystroke="shift alt 5" />
  </action>
  <action id="GotoDeclaration">
    <keyboard-shortcut first-keystroke="ctrl b" />
    <mouse-shortcut keystroke="control button1" />
    <mouse-shortcut keystroke="button2" />
    <keyboard-shortcut first-keystroke="ctrl comma" />
  </action>
  <action id="GotoImplementation">
    <keyboard-shortcut first-keystroke="ctrl alt b" />
    <mouse-shortcut keystroke="control alt button1" />
    <keyboard-shortcut first-keystroke="ctrl alt comma" />
  </action>
  <action id="ManageRecentProjects">
    <keyboard-shortcut first-keystroke="ctrl alt slash" />
  </action>
  <action id="NextSplitter">
    <keyboard-shortcut first-keystroke="alt period" />
  </action>
  <action id="PrevSplitter">
    <keyboard-shortcut first-keystroke="alt comma" />
  </action>
  <action id="RearrangeCode">
    <keyboard-shortcut first-keystroke="ctrl alt r" />
  </action>
  <action id="Refactorings.QuickListPopupAction">
    <keyboard-shortcut first-keystroke="ctrl r" second-keystroke="r" />
  </action>
  <action id="Replace">
    <keyboard-shortcut first-keystroke="alt r" />
  </action>
  <action id="RiderManageRecentProjects">
    <keyboard-shortcut first-keystroke="alt t" />
  </action>
  <action id="RiderUnitTestFocusExplorerAction">
    <keyboard-shortcut first-keystroke="alt 6" />
  </action>
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="alt h" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="alt v" />
  </action>
</keymap>